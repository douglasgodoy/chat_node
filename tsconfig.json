{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 15",

    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "outDir": "build/",
        "baseUrl": "./",
        "types": ["node"],
        "paths": {
            "src/*": ["./*"]
        },
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
